@model DoAn.Models.Product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Product</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Product:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ID_Cat)
        </dd>

        <dt>
            NSX:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ID_NSX)
        </dd>

        <dt>
            NameNSX:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NameP)
        </dd>

        <dt>
            Price:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt>
            Detail:
        </dt>

        <dd>
            @String.Format("{0:0,0}", Model.Detail)VND
        </dd>

        <dt>
            Img:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Img)
        </dd>

        <dt>
            Quantity:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Quantity)
        </dd>

        <dt>
            Update_at:
        </dt>

        <dd>
            @String.Format("{0:dd/mm/yyyy}", Model.Update_at)VND

        </dd>

        <dt>
            State:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.State)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input style="color:black" type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Product")
        </div>
    }
</div>
