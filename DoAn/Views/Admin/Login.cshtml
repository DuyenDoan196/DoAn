
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/admin.css">
    <link rel="stylesheet" href="~/css/Dan.css">
    <meta name="viewport" content="width=device-width" />
     <meta charset="utf-8"/>
    <title>LoginAdmin</title>
</head>
<body>
    <div class="top-content">
        <div class="inner-bg">
            <div class="container">
                <div class="row">
                    <div class="col-sm-6 col-sm-offset-3 form-box">
                        <div class="form-top">
                            <div class="form-top-left">
                                <h4>ĐĂNG NHẬP HỆ THỐNG QUẢN TRỊ</h4>
                                <p>VUI LÒNG NHẬP USER & PASSWORD</p>
                                <h4 style="color:red; text-align:center">@ViewBag.ThongBao</h4>
                            </div>
                            <div class="form-top-right">
                                <i class="fa fa-key"></i>
                            </div>
                        </div>   
                        <div class="form-bottom">
                            @using (Html.BeginForm())
                            {
                                @Html.ValidationSummary(true)
                                <div class="form-group">
                                    <label class="sr-only" for="form-username">Username:</label>
                                    <input type="text" name="username" placeholder="Username..." class="form-username form-control" id="form-username" />
                                    @ViewData["Loi1"]
                                </div>
                                <div class="form-group">
                                    <label class="sr-only" for="form-username">Password:</label>
                                    <input type="text" name="password" placeholder="Password..." class="form-password form-control" id="form-password" />
                                    @ViewData["Loi2"]
                                </div>
                                <button type="submit" class="btn" style="color:black">Đăng Nhập</button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
