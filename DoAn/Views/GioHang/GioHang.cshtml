@using DoAn.Models
@model List<GioHang>
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<h2 style="text-align:center">THÔNG TIN GIỎ HÀNG</h2>

<table align="center" border="1">
    <tr style="text-align:center;font-weight:bold">
        <td>Mã sản phẩm</td>
        <td>Tên sản phẩm </td>
        <td>Ảnh sản phẩm</td>
        <td width="80px">Số lượng</td>
        <td width="100px">Đơn giá</td>
        <td width="100px">Thành tiền</td>
        <td width="80px"></td>
        <td width="80px"></td>
    </tr>
    @foreach (var giay in Model)
    {
    <tr style="text-align:center; font-weight:bold">
        <td>@giay.MaSP</td>
        <td>@giay.TenSP</td>
        <td ><img width="250px" src ="@giay.Hinh" /></td>
        @using (Html.BeginForm("updateGH","GioHang", new{@MaSP = giay.MaSP}))
            {
        <td width="50px">
            <input type="number" min="1" name="txtSoLuong" value="@giay.SoLuong" style="background-color:yellow; text-align:center" />
        </td>

        <td>@String.Format("{0:0,0}", giay.GiaSP)</td>
        <td>@String.Format("{0:0,0}", giay.ThanhTien)</td>
        <td><a href="@Url.Action("Detail","Shoes", new { id= giay.MaSP} )">Chi tiết</a></td>
        <td> @Html.ActionLink("Xóa","XoaGH", new { @MaGiay= giay.MaSP})</td>
        <td><input type="submit" value="Cập nhật" /></td>
            }
    </tr>
    }
    <tr style="font-weight:bold; text-align:right;color:red">
        <td colspan="4">Số lượng giày:@ViewBag.TongSL</td>
        <td colspan="5">Tổng tiền:@String.Format("{0:0,0}", ViewBag.TongTien)VND</td>
    </tr>
    <tr style="font-weight:bold; color:blue; text-align:right">
        <td colspan="9">
            @Html.ActionLink("Xóa giỏ hàng", "XoaTatCaGH")
        </td>
    </tr>
</table>


