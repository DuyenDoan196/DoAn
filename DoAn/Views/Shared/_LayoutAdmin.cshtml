        <ul class="nav navbar-nav">
            <li>
                @Html.ActionLink("TRANG CHỦ", "Index", "Admin")
            </li>
            <li>
                @Html.ActionLink("QUẢN LÍ CHỦ ĐỀ", "Product", "Admin")
            </li>
            <li>
                @Html.ActionLink("QUẢN LÍ NHÀ SẢN XUẤT", "NhaSX", "Admin")
            </li>

        </ul>
    </div>*@
    <div>
        @RenderBody()
    </div>
    @Html.Partial("Footer");

</body>
</html>
