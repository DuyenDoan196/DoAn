
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <title>Signup Form</title>
    <link rel="stylesheet" href="~/css/Login.css">
</head>
<body>
    <div class="center">
        <h1>SignUp</h1>
        <form method="post">
            <div class="txt_field">
                @*<input type="text" required>*@
                <td>@Html.TextBox("HoTenKh")</td>
                @ViewData["Loi1"]
                <span></span>
                <label>Username</label>
            </div>

            <div class="txt_field">
                @*<input type="text" required>*@
                <td>@Html.TextBox("Email")</td>
                @ViewData["Loi2"]
                <span></span>
                <label>Email</label>
            </div>

            <div class="txt_field">
                @*<input type="text" required>*@
                <td>@Html.TextBox("PhoneNumber")</td>
                @ViewData["Loi3"]
                <span></span>
                <label>PhoneNumber</label>
            </div>
            <div class="txt_field">
                @*<input type="text" required>*@
                <td>@Html.TextBox("Address")</td>
                @ViewData["Loi4"]
                <span></span>
                <label>Address</label>
            </div>
            <div class="txt_field">
                @*<input type="password" required>*@
                <td>@Html.TextBox("Password")</td>
                @ViewData["Loi5"]
                <span></span>
                <label>Password</label>
            </div>
            <input type="submit" value="SignUp">
            <div class="signup_link">
                <a href="@Url.Action("Login","User")">Login</a>
            </div>

        </form>
    </div>

</body>
</html>


